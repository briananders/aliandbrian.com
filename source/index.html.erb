<div id="content">

  <header id="header">
    <article>
      <container>
        <%= partial "partials/header" %>
      </container>
    </article>
  </header>

  <section id="meeting">
    <%= partial "partials/meeting" %>
  </section>

  <section id="proposal">
    <%= partial "partials/proposal" %>
  </section>

  <div itemscope itemtype="http://schema.org/Event">
    <meta itemprop="name" content="Alison Thomas and Brian Anders wedding">
    <section id="when" class="fifty square vertical-centered">
      <article>
        <container>
          <%= partial "partials/when" %>
        </container>
      </article>
    </section>

    <section id="where" class="fifty right square vertical-centered">
      <article>
        <container itemprop="location" itemscope itemtype="http://schema.org/Place">
          <%= partial "partials/where"%>
        </container>
      </article>
    </section>
  </div>

  <section id="slideshow">
    <%= partial "partials/slideshow"%>
  </section>

  <div>
    <section id="theme" class="fifty centered vertical-centered">
      <article>
        <container>
          <%= partial "partials/theme"%>
        </container>
      </article>
    </section>

    <section id="dress" class="fifty right centered vertical-centered">
      <article>
        <container>
          <%= partial "partials/dress"%>
        </container>
      </article>
    </section>
  </div>

  <section id="hotel" class="centered">
    <article>
      <container>
        <%= partial "partials/hotel"%>
      </container>
    </article>
  </section>

  <section id="directions">
    <%= partial "partials/directions"%>
  </section>

  <div>
    <section id="registries" class="fifty centered vertical-centered">
      <article>
        <container>
          <%= partial "partials/registries"%>
        </container>
      </article>
    </section>

    <section id="disclaimer" class="fifty right centered vertical-centered">
      <article>
        <container>
          <%= partial "partials/disclaimer"%>
        </container>
      </article>
    </section>
  </div>

  <section id="footer" class="vertical-centered centered">
    <article class="rsvp">
      <container>
        The invitations you receive in the mail <br>will give you instruction on how to RSVP.
      </container>
    </article>
  </section>

  <div id="copyright">&copy; 2014 - Brian Anders</div>
</div>
